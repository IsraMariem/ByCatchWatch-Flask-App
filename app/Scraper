import requests
from bs4 import BeautifulSoup

def scrape_bycatch_solutions():
    url = "https://bycatchsolutions.org/solutions/?keyword=&active-filter=bycatch-species&bycatch-species="
    headers = {
        "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/89.0.4389.82 Safari/537.36"
    }

    response = requests.get(url, headers=headers)
    soup = BeautifulSoup(response.text, "html.parser")

    solutions = []
    solution_cards = soup.find_all("div", class_="solution-card")  # Adjust based on the site structure

    for card in solution_cards:
        title = card.find("h3").text.strip()  # Adjust based on the site structure
        description = card.find("p").text.strip()  # Adjust based on the site structure
        link = card.find("a")["href"]  # Adjust based on the site structure

        solutions.append({
            "Title": title,
            "Description": description,
            "Link": link
        })

    return solutions
